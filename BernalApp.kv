                    md_bg_color: 7/255, 1/255, 33/255, 1
                    

<TelaInicial>:
    MDCard: 
        orientation:'vertical'
        size_hint: None, None
        size: 500, 600
        pos_hint: {"center_x": 0.5,"center_y": 0.5}
        padding: 25
        spacing: 25
        md_bg_color: 7/255, 1/255, 33/255, 1
        MDCard:
            orientation:'vertical'
            size_hint: None, None
            size: 425, 550
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            padding: 25
            spacing: 15
            md_bg_color: 1,1,1, 1
            line_color: 0/255, 115/255, 247/255, 1

            Image:
                source: 'bernal-logoteste.jpg'
                size_hint_y: None
                height: 70
                allow_stretch: True

            BoxLayout:
                orientation:'vertical'
                ScrollView:
                    BoxLayout:
                        id:box
                        orientation:'vertical'
                        size_hint_y: None
                        height:self.minimum_height
                BoxLayout:
                    size_hint_y: None
                    height: 60
                    TextInput:
                        id:tarefa
                        font_size:30
                        background_color:(7/255, 1/255, 33/255, 1)
                    Button:
                        text:'+'
                        size_hint_x: None
                        width: 60
                        on_release: root.addComponente()

<Funcoes>:
    size_hint_y: None
    Label:
        id:label
    Button:
        text:'X'
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('TelaInicial').ids.box.remove_widget(root)
